.navbar.bg-primary.app-header: .container
  .navbar-header.bg-primary
    if currentUser
      button.toggle.pull-left.visible-xs.side-nav(data-target='.app-aside' data-toggle='off-screen')
        i.fa.fa-align-justify
    a.navbar-brand.text-lt(href='/'): img(src='/img/logotrans.png')
  .collapse.navbar-collapse.box-shadow.bg-primary
    if currentUser
      .navbar-text Total Balance: {{currentUser.totalBalance '$0,0.00'}}
    ul.nav.navbar-nav.navbar-right
      li: a(href='/') Home
      li: a(href='http://buyanycoin.freshdesk.com') Support
      li
        +atNavButton
