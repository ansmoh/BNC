#buyModal.modal.fade.m-t(tabindex='-1', role='dialog', aria-labelledby='buyModalLabel', aria-hidden='true')
  .modal-dialog
    .modal-content
      .modal-header
        button.close(type='button', data-dismiss='modal')
          span(aria-hidden='true') &times;
          span.sr-only Close
        h4#buyModalLabel.modal-title.font-bold Buy {{currency.code}} with {{secondaryCode}}
      .modal-body
        form.form-horizontal(role='form')
          .form-group
            .col-sm-10
              .input-group
                .input-group-addon Amount {{currency.code}}
                input.amount.form-control(type='text' name='amount')
                .input-group-addon @{{number price '0.00000000'}} {{secondaryCode}}
          .form-group.no-mb
            label.col-sm-3.control-label #[b Sub Total]
            .col-sm-9
              .form-control-static {{number subTotal '0,0.00000000'}} {{secondaryCode}}
          .form-group.no-mb
            label.col-sm-3.control-label #[b 1.00% Fee]
            .col-sm-9
              .form-control-static {{number fee '0,0.00000000'}} {{secondaryCode}}
          .form-group.no-mb
            label.col-sm-3.control-label #[b Total]
            .col-sm-9
              .form-control-static {{number total '0,0.00000000'}} {{secondaryCode}}
          .form-group.no-mb
            label.col-sm-3.control-label #[b {{secondaryCode}} Available]
            .col-sm-9
              .form-control-static
                a.text-info.available(href='') {{number balance '0,0.00000000'}} #[a.btn.btn-primary.buy-max(style='margin-left:10px') Buy Max]

        //form(role='form')
          .form-group
            if isBuyOption
              label.control-label(for='amount') Number of coins to buy:
            else
              label.control-label(for='amount') Amount of USD to spend:
            input.amount.form-control(type='text' name='amount')
            input(type='hidden' value='{{currency.code}}')
            span.currency-text {{currency.code}}
            span.rate-text @{{number currency.rate '0.00000'}} USD
          .form-group
            if isBuyOption
              label.control-label
                strong Total Price:
            else
              label.control-label
                strong Total Coins:
            span {{number total '$0,0.00000'}}
            br
            label.control-label
              strong Fee:
            span {{number fee '$0,0.00000'}}
          .form-group
            label.control-label
              strong USD Balance:
            span {{number balance '$0,0.00'}}
            button.btn.btn-primary.btn-sm.buy-max(type='button') Buy Max
      .modal-footer
        button.btn.btn-default(type='button' data-dismiss='modal') Cancel
        button.btn.btn-success.buy(data-loading-text="Processing..." autocomplete="off") Buy
