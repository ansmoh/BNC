
+coinModal coin=selectedCoin

.app-content-body.fade-in-up
  .bg-light.lter.b-b.wrapper-md
    h1.m-n.font-thin.h3 Buy/Sell
  .wrapper-md
    .row
      each coins
        .col-lg-3.col-md-4.col-sm-6.col-xs-12
          .panel.no-border
            a.panel-heading.bg-default(data-toggle='modal' data-target='#coinModal')
              .text-center
                .thumb-lg.avatar.m-b-lg
                  img.img-circle(src='img/{{this.code}}.png')
                  i.b-white.top.right(class="{{activeClass}}")
                br
                span.h3.text-info {{this.name}}({{this.code}})
                .m-sm
                  span.h4 {{this.price 'USD' '$0.00000000'}}
